# MinIO Configuration
# Эти переменные используются в docker-compose.minio.yml

# Порты MinIO (внешние)
# API порт (левый в docker-compose, правый всегда 9000 внутри контейнера)
MINIO_API_PORT=9000
# Console порт (левый в docker-compose, правый всегда 9001 внутри контейнера)
MINIO_CONSOLE_PORT=9001

# Root credentials (обязательно измените в production!)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# Browser redirect URL (для веб-консоли)
# Используйте внешний адрес и MINIO_CONSOLE_PORT
MINIO_BROWSER_REDIRECT_URL=http://localhost:${MINIO_CONSOLE_PORT}
# Для production, например:
# MINIO_BROWSER_REDIRECT_URL=http://your-minio-domain:${MINIO_CONSOLE_PORT}
